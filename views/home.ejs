<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        *{
            margin: 0;

        }
        .parent{
            font-family: cursive;
            background: linear-gradient(to right, #FFEB3B, #BDB76B);
            width: 100;
            height:100;
        }
        a{
            text-decoration: none;
            color: black;
        }
        .table{
            width: 100%;
        }
        .ogurl{
            background-color: none;
        }
        .submit{
            cursor: pointer;
            border-width: 2px;
            border-radius: 10px;
            background-color: rgb(5, 215, 5);
            font-weight:bolder;
        }
        .input{
            border-radius: 6px;
        }
    </style>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Compact</title>
</head>
<body>
    <div>
    <center  class="parent">
    <h1>Compact URL using Magic</h1><br>
    <div action="/">
    <form method="POST" action="/url">
        <label><h2>Do you have any URLs to shorten?</h2></label><br>
        <input type="text" class="input" name="url" placeholder="https://HackNasaUsingHTML.com" style="width: 250px;">
        <button type="submit" class="submit">Avada Kedavra </button><br>
    </form>
</div>
<br>
<div>
    <% if (locals.urls) { %>
     <table class="table">
        <thead>
            <th>Sr.No.</th>
            <th>You gave us this</th>
            <th>We made this</th>
            <th>Clicks</th>
        </thead>
        <tbody>
            <% urls.forEach((url, index) => { %>
                <tr>
             <td><center><%= index+1 %></center></td>
             <td class="ogurl"><center><a target="_blank" href="<%= url.redirectURL %>"><%= url.redirectURL%></a></center></td>
             <td><center><a target="_blank" href="http://localhost:4567/url/<%= url.shortId %>"><%= url.shortId %></a></center></td>
             <td><center><%= url.visitHistory.length %></center></td>
            <% }) %>
        </tr>
        </tbody>
     </table>
    <% } %>
</div>
</center>
</div>
</body>
</html>